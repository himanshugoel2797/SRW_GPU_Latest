    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: ExampleViewDataFile",
            "type": "python",
            "request": "launch",
            "args": ["-f", "sample_def/res_int_pr_me_0.dat", "-s", "log10", "-j1", "--diag=1"],
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "(gdb) Attach",
            "type": "cppdbg",
            "request": "attach",
            "program": "/bin/python3", /* My virtual env */
            "processId": "${command:pickProcess}",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}